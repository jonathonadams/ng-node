{
  "name": "@uqt/ng-node",
  "version": "1.0.0",
  "description": "Angular CLI builders for node applications",
  "builders": "builders.json",
  "type": "commonjs",
  "repository": {
    "type": "git",
    "url": "https://github.com/jonathonadams/ng-node"
  },
  "keywords": [
    "Angular",
    "ng",
    "Builder",
    "node"
  ],
  "author": "Jonathon Adams",
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "commit": "npx git-cz",
    "build": "tsc",
    "lint": "tslint --project tsconfig.json",
    "example:build": "tsc --build example/apps/api/tsconfig.json",
    "example:run": "node example/out/apps/api/index.js",
    "test": "jest --coverage --runInBand",
    "validate": "npm run lint && npm run test",
    "report-coverage": "./node_modules/.bin/codecov",
    "prepare": "npm run build && npm run validate",
    "semantic-release": "semantic-release"
  },
  "dependencies": {
    "@uqt/ts-path-replace": "^1.0.1",
    "cp-file": "^9.0.0",
    "cross-env": "^7.0.2",
    "dotenv": "^8.1.0",
    "glob": "^7.1.6",
    "tree-kill": "^1.2.2"
  },
  "peerDependencies": {
    "@angular-devkit/architect": "0.x"
  },
  "devDependencies": {
    "@angular-devkit/architect": "^0.1000.3",
    "@commitlint/cli": "^9.1.2",
    "@commitlint/config-conventional": "^9.1.1",
    "@semantic-release/changelog": "^5.0.1",
    "@semantic-release/git": "^9.0.0",
    "@types/jest": "^26.0.5",
    "@types/node": "^14.0.24",
    "codecov": "^3.7.1",
    "commitizen": "^4.1.2",
    "cz-conventional-changelog": "^3.2.0",
    "husky": "^4.2.5",
    "jest": "^26.1.0",
    "rimraf": "^3.0.2",
    "semantic-release": "^17.1.1",
    "ts-jest": "^26.1.3",
    "tslint": "^6.1.2",
    "typescript": "^3.9.7"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run validate",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "release": {
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/changelog",
      "@semantic-release/npm",
      "@semantic-release/git"
    ]
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  }
}
