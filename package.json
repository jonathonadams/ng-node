{
  "name": "@uqt/ng-node",
  "version": "0.0.5",
  "description": "Angular CLI builders for node applications",
  "builders": "builders.json",
  "repository": {
    "type": "git",
    "url": "https://github.com/unquenchablethyrst/ng-node"
  },
  "keywords": [
    "Angular",
    "ng",
    "Builder",
    "node"
  ],
  "author": "Jonathon Adams",
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "commit": "npx git-cz",
    "build": "tsc",
    "lint": "tslint --project tsconfig.json",
    "example:build": "tsc --build example/apps/api/tsconfig.json",
    "example:run": "node example/out/apps/api/index.js",
    "test": "jest --coverage --runInBand",
    "validate": "npm run lint && npm run test",
    "report-coverage": "./node_modules/.bin/codecov",
    "prepare": "npm run build && npm run validate",
    "semantic-release": "semantic-release"
  },
  "dependencies": {
    "@angular-devkit/architect": "^0.803.23",
    "@types/glob": "^7.1.1",
    "@uqt/ts-path-replace": "^0.0.5",
    "cp-file": "^7.0.0",
    "cross-env": "^6.0.3",
    "del": "^5.1.0",
    "dotenv": "^8.1.0",
    "glob": "^7.1.6",
    "tree-kill": "^1.2.2"
  },
  "devDependencies": {
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-conventional": "^8.3.4",
    "@semantic-release/changelog": "^3.0.6",
    "@semantic-release/git": "^8.0.0",
    "@types/jest": "^24.9.0",
    "@types/node": "^12.12.25",
    "codecov": "^3.6.2",
    "commitizen": "^4.0.3",
    "cz-conventional-changelog": "^3.0.2",
    "husky": "^4.2.0",
    "jest": "^25.1.0",
    "rimraf": "^3.0.0",
    "semantic-release": "^16.0.3",
    "ts-jest": "^25.0.0",
    "tslint": "^5.20.1",
    "typescript": "^3.7.5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run validate",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "release": {
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/changelog",
      "@semantic-release/npm",
      "@semantic-release/git"
    ]
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  }
}
